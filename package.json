{
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-replace": "^5.0.2",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/dev-server-rollup": "^0.5.2",
    "@web/test-runner": "^0.17.1",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.20",
    "open-props": "^1.5.15",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "prismjs": "^1.29.0",
    "syncpack": "^11.2.1"
  },
  "scripts": {
    "build": "npx concurrently -n w: npm:build:*",
    "build:css": "postcss \"_assets/style.postcss\" --base . --dir . --ext .css --config postcss.config.cjs",
    "build:html": "npx @11ty/eleventy",
    "build:js": "for comp in components/{common,ed-*}/;do comp=$(basename $comp) && echo $comp && esbuild components/$comp/src/$comp.ts --bundle --minify --platform=neutral --outdir=_site/js;done",
    "build:manifest": "pnpm -r analyze",
    "clean:dist": "find ./components -type d -name dist -exec rm -r \"{}\" \\; && echo 'Success: Dist cleaned'",
    "clean:node_modules": "find . -name \"node_modules\" -type d -exec rm -r \"{}\" \\;",
    "format": "prettier --write \"**/*.{js,mjs,cjs,ts}\" && syncpack format",
    "serve": "npx @11ty/eleventy --serve",
    "start": "npx concurrently -n w: npm:watch:*",
    "watch:css": "postcss \"_assets/style.postcss\" --verbose --base . --dir . --ext .css --config postcss.config.cjs --watch",
    "watch:html": "npx @11ty/eleventy --serve",
    "watch:js": "for comp in components/ed-*/;do comp=$(basename $comp) && esbuild components/$comp/src/$comp.ts --watch=forever --bundle --outdir=_site/js & echo $comp;done",
    "watch:manifest": "pnpm -r analyze -- --watch"
  }
}