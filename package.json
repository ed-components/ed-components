{
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,mjs,cjs,ts}\"",
    "build:css": "postcss \"_assets/style.postcss\" --base . --dir . --ext .css --config postcss.config.cjs",
    "build:html": "npx @11ty/eleventy",
    "build:js": "for comp in components/ed-*/;do comp=$(basename $comp) && echo $comp && esbuild components/$comp/src/$comp.ts --bundle --minify --outdir=_site/js;done",
    "build": "npx concurrently -n w: npm:build:*",
    "watch:css": "postcss \"_assets/style.postcss\" --verbose --base . --dir . --ext .css --config postcss.config.cjs --watch",
    "watch:html": "npx @11ty/eleventy --serve",
    "watch:js": "for comp in components/ed-*/;do comp=$(basename $comp) && esbuild components/$comp/src/$comp.ts --watch=forever --bundle --outdir=_site/js & echo $comp;done",
    "start": "npx concurrently -n w: npm:watch:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.17",
    "open-props": "^1.5.10",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-nesting": "^12.0.0",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^2.5.1",
    "postcss-import": "^15.1.0",
    "prismjs": "^1.29.0"
  }
}