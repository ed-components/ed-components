{
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,mjs,cjs,ts,md}\"",
    "build:css": "postcss \"**/*.postcss\" --base . --dir . --ext .css --config postcss.config.cjs",
    "build:html": "npx @11ty/eleventy",
    "build": "npm run build:html && npm run build:css",
    "watch:css": "postcss \"**/*.postcss\" --base . --dir . --ext .css --config postcss.config.cjs --watch",
    "watch:html": "npx @11ty/eleventy --serve",
    "watch:js": "for comp in components/ed-*/;do comp=$(basename $comp) && echo $comp && esbuild components/*/src/$comp.ts --bundle --minify --outdir=_site/js;done",
    "start": "npx concurrently -n w: npm:watch:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.17",
    "lit": "^2.7.6",
    "postcss": "^8.4.26",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^12.0.0",
    "prettier": "^2.5.1",
    "tslib": "^2.6.0"
  }
}
