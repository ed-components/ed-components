{
  "name": "ed-quiz",
  "version": "0.1.0",
  "description": "A web component to create quiz using markdown gfm markdown's todos.",
  "keywords": [
    "quiz",
    "markdown",
    "web-component"
  ],
  "license": "MIT",
  "author": "Benjamin Abel <dev.abel@free.fr> (lyceum.fr)",
  "main": "index.js",
  "repository": "https://framagit.org/lyceum/design",
  "scripts": {
    "format": "../../node_modules/.bin/prettier -w src/ed-quiz.ts src/lib/md2html.js ",
    "build": "npm-run-all build:parser build:component",
    "build:parser": "esbuild  ./src/lib/md2html.js --bundle --format=esm --minify --sourcemap --outfile=src/lib/build.js",
    "build:component": "esbuild ./src/ed-quiz.js --bundle --format=esm --minify --outfile=index.js",
    "watch:parser": "esbuild  ./src/lib/md2html.js --watch --bundle --format=esm --minify --sourcemap --outfile=src/lib/build.js",
    "watch:component": "esbuild ./src/ed-quiz.js --watch --bundle --format=esm --outfile=./dev/ed-quiz.js",
    "start": "npm-run-all --parallel format watch:parser watch:component"
  },
  "devDependencies": {
    "esbuild": "^0.18.18",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "micromark": "^3.0.0",
    "micromark-extension-gfm": "^1.0.0",
    "micromark-extension-math": "^1.0.0"
  }
}