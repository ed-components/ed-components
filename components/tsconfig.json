{
  "compilerOptions": {
    "declarationDir": "dist/dts",
    "outDir": "dist/esm",
    "target": "es2015",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["DOM", "ES2015"],
    "declaration": true,
    "importHelpers": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    // Skip typechecking libraries and .d.ts files
    "skipLibCheck": true
  }
}
